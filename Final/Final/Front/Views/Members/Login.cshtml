@model Project2.Models.ViewModels.LoginVm

@{
    ViewBag.Title = "登入";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<div class="form-horizontal col-6 " style="border: 1px solid #808080; border-radius: 5%;width:500px;height:450px ;margin-left:20px;"> @*display: none;*@
    <h2 class="mt-3  text-center" style="font-size:35px; font-weight:500;">登入</h2>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="mb-3 mt-3" style="margin-left:50px;">
        @Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "form-label col-md-2", style = "font-size: 22px;" })
        @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control  text-center", style = "width:400px" } })
        @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3" style="margin-left: 50px;">
        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label col-md-2", style = "font-size: 22px;" })
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control  text-center", style = "width:400px" } })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3" style="margin-left: 50px; ">
        <div class="checkbox">
            @Html.EditorFor(model => model.RememberMe)
            @Html.LabelFor(model => model.RememberMe, htmlAttributes: new { @class = "form-label col-md-2" })
            @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="mb-3">
        <input type="submit" value="登入" class="btn btn-primary" style="width:200px;margin-left:130px;margin-bottom:30px;" />
        <br />
        <a href="#" style="margin-left:110px">註冊</a>
        <a href="#" style="margin-left: 140px">忘記密碼</a>
    </div>
</div>
        
        <div class="mb-3 mt-3" >
        </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
