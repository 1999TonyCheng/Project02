@model Project2.Models.ViewModels.ForgetPasswordVm

@{
    ViewBag.Title = "忘記密碼";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-6 " style="border: 1px solid #808080; border-radius: 5%;width:550px;height:450px ;margin-left:600px;margin-top:60px;margin-bottom:100px;"> 
        <h2 class="mt-3  text-center" style="font-size:35px; font-weight:500;">忘記密碼</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mb-3 mt-3" style="margin-left: 50px; font-size: 20px;margin-top:20px;">
            @Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "form-label col-md-2" })
                @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3" style="margin-left: 50px; font-size: 20px; margin-top: 20px; ">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label col-md-2" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3"style="margin-top: 70px;">
            <div class="text-center">
                <input type="button" id="resetPasswordButton" value="重設密碼" class="btn btn-primary" style="width: 200px" onclick="submitForm()" />

            </div>
        </div>
    </div>
}

