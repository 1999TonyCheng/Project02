@{
    ViewBag.Title = "首頁";
}

<head>
    <style>

        .card-title {
            height: 35px;
            font-size: 22px;
            font-weight: 800;
            text-align: center;
            color: rgb(12, 88, 103);
            background-color: rgb(216, 241, 248);
        }

        .card img {
            object-fit: cover;
            height: 300px;
            border-radius: 5%
        }

        .card:hover {
            transform: scale(1.05);
            /* 悬停时放大卡片 */
            transition: transform 0.3s ease-in-out;
            /* 添加过渡效果 */
        }

