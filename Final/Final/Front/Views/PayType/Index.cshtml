@model IEnumerable<Project2.Models.ViewModels.PayTypeVm>

@{
    ViewBag.Title = "方案選擇";
}

<h2>方案選擇</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fee)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee)
            </td>
            <td>
                <button class="choose" data-id="@item.Id">選擇此方案</button>
            </td>
        </tr>
    }

</table>
@section css{
    <style>
        .choose {
            color: red;
        }
    </style>
}
@section scripts{
    <script>
        $(document).ready(function () {
            $(".choose").each(function () {
                $(this).on("click", function () {
                    var self = $(this);

                    var paytypeId = self.attr("data-id");

                    window.location.href = "/VIP/JoinVip?paytypeId=" + paytypeId;

                });
            });
        })
    </script>
}