@model Project2.Models.ViewModels.CheckoutVm

@{
    ViewBag.Title = "購買方案";
}

<h2>購買方案</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="mb-3">
        @Html.LabelFor(model => model.CardNumber, htmlAttributes: new { @class = "form-label col-md-2" })
            @Html.EditorFor(model => model.CardNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CardNumber, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.ThreeNumber, htmlAttributes: new { @class = "form-label col-md-2" })
            @Html.EditorFor(model => model.ThreeNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ThreeNumber, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.ExpireDate, htmlAttributes: new { @class = "form-label col-md-2" })
            @Html.EditorFor(model => model.ExpireDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ExpireDate, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "form-label col-md-2" })
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "form-label col-md-2" })
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
    </div>

    @if (ViewBag.ErrorMessage == null)
    {
        <div class="mb-3">
            <div class="twxt-end">
                <input type="submit" value="成為付費會員" class="btn btn-primary" />
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
