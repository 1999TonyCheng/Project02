@model Project2.Models.ViewModels.EditPasswordVm

@{
    ViewBag.Title = "變更密碼";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal col-6 " style="border: 1px solid #808080; border-radius: 5%;width:600px;height:450px ;margin-left:550px;margin-top:70px;margin-bottom:100px;">
    <h2 class="mt-3  text-center" style="font-size:35px; font-weight:500;">變更密碼</h2>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="mb-3 mt-3" style="margin-left:50px;">
    @Html.LabelFor(model => model.OriginalPassword, htmlAttributes: new { @class = "control-label col-md-2",
    style = "font-size:19px;" })
    @Html.EditorFor(model => model.OriginalPassword, new { htmlAttributes = new { @class = "form-control", style = "width:500px" } })
    @Html.ValidationMessageFor(model => model.OriginalPassword, "", new { @class = "text-danger" })
</div>

<div class="mb-3" style="margin-left: 50px;">
    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2",
    style = "font-size:19px;" })
    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", style = "width:500px" } })
    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
</div>

<div class="mb-3" style="margin-left: 50px;">
    @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2",
    style = "font-size:19px;"
})
    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", style = "width:500px" } })
    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
</div>

    <div class="mb-3">
        <div class="text-center" style="margin-top:40px">
            @Html.ActionLink("回會員中心", "Index", null, new { @class = "btn btn-success" })
            <input type="submit" value="確定" class="btn btn-primary"style="width:7rem;margin-left:10px" />

        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
